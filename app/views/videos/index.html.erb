<p id="notice"><%= notice %></p>

<div class="row">
  <h2 class='left'>新規投稿</h2>
    <%= link_to new_video_path, class: 'btn-floating btn-large waves-effect waves-light red', style: 'margin: 2.373rem 0 1.424rem 15px' do %>
      <i class="material-icons">add</i>
    <% end %>
</div>

<div class="row">
  <div class="col s12 m7">
    <% @videos.each do |video| %>
      <div class="card">
        <div class="card-image">
          <%= image_tag "#{video.image}", size: '150×150' %>
          <span class="card-title"><%= video.title %></span>
        </div>
        <div class="card-content">
          <p><%= video.description %></p>
        </div>
        <div class="card-action">
            <%= render partial: 'muscle/modal_form', locals: {video: video}, class: 'btn' %>
          <div class="uzai-group">
            <%= link_to "動画を視聴する", video, class: "btn uzai-btn" %>
          </div>
            <%= link_to "編集", edit_video_path(video), class: "btn" %>
            <%= link_to "削除", video, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
        </div>
      </div>
      <script>
        $(document).ready(function(){
          $("#<%= video.muscle_id %>").modal();
        });
      </script>
    <% end %>
  </div>
</div>

